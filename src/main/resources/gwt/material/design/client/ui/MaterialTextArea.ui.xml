<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:gwt.material.design.client.custom">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel addStyleNames="input-field">
		<c:CustomIcon ui:field="iconPanel" />
        <g:TextArea ui:field="txtBox" addStyleNames="materialize-textarea"/>
       	<c:CustomLabel ui:field="customLabel"><g:Label ui:field="lblName"/></c:CustomLabel>
	</g:HTMLPanel>
</ui:UiBinder> 